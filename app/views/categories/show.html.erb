<h2><%= @category.name %></h2>
 
<div class="row", id="productList">
            <div class="col-lg-4 col-md-6 mb-4">
              <div class="card h-100">
                <div class="card-body">
                  <h4 class="card-title">
                    <%= link_to @category.name%></h4>
                  <p class="card-text"><%= @category.description %></p>
                </div>
                <div class="card-footer">
                  <small class="text-muted"> Category has (<%= @category.products.count %>) products</small>
                </div>
              </div>
            </div>
          </div>
          <br>
<%= link_to "Categories list",categories_path %></br>
</br>
<p><% if user_signed_in? %><%= link_to "edit", edit_category_path(@category.id) %> | <%= link_to "delete", category_path(@category.id), method: :delete, data: {confirm: "Are you sure? "}%> <% end %></p>